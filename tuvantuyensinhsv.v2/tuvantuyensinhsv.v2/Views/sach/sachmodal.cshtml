<div class="modal fade" id="tangsachmodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Create group
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input autocomplete="off" type="text" ng-model="name" class="form-control" placeholder="Name">
                    <p style="color:red;">{{nameerror}}</p>
                </div>
                <div class="form-group">
                    <input autocomplete="off" type="password" ng-model="password" class="form-control" placeholder="password">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="createGroup()">Create</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->
