@model tuvantuyensinhsv.v2.Models.Question

@{
    ViewBag.Title = "Đặt câu hỏi";
}
<div class="row">
    <div class="col-lg-12">
        <div class="box box-success">
            <div class="box-header">
                <h3>Đặt câu hỏi</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <input class="form-control" name="TieuDe" placeholder="Tiêu đề" autocomplete="off" />
                        @Html.ValidationMessageFor(model => model.Tieude)
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" placeholder="Nội dung" name="Noidung"></textarea>
                        @Html.ValidationMessageFor(model => model.Noidung)
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Đặt câu hỏi" class="btn btn-default" />
                        </div>
                    </div>
                    <input name="Tabs" type="hidden" value="" id="_inputsTabs" ng-model="createcontroller.baiviet.tabs" />
                }
            </div>
            <div class="box-footer">
                @Html.Partial("~/views/tabengineserver/_createtag.cshtml")
            </div>
        </div>
    </div>
</div>